<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard.ui.SupportActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_85sdp"
                      android:layout_gravity="center"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:id="@+id/useroprofile"
                        android:layout_centerInParent="true"
                        android:src="@drawable/rnd_logo"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorPrimary"/>

                </RelativeLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact    :  "
                    android:textColor="@color/black"
                    android:layout_marginTop="5sp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_phone"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:id="@+id/picmob"
                    android:drawablePadding="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91-9898968585"
                    android:id="@+id/mobile"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:drawablePadding="10dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email        : "
                    android:id="@+id/picemil"
                    android:textColor="@color/black"
                    android:layout_marginTop="5sp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_email_phone"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:drawablePadding="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rmd@gmail.com"
                    android:id="@+id/email"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:drawablePadding="10dip"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address   : "
                    android:textColor="@color/black"
                    android:layout_marginTop="5sp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/nav_location"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:drawablePadding="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:textColor="@color/black"
                    android:text="MIG-14, Shilpi Holmes, NFC Road, HB Colony, Opp.Mahatma Gandhi Statue"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawablePadding="10dip"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website    : "
                    android:textColor="@color/black"
                    android:layout_marginTop="5sp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_internet"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:drawablePadding="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="http://rms.com"
                    android:id="@+id/link"
                    android:textColor="#2C3DB9"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawablePadding="10dip"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>