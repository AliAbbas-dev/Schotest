<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".Login.ui.LoginActivity">


    <ScrollView
         android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:id="@+id/logo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/rnd_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp"/>


            <RelativeLayout
                android:id="@+id/RL1"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_below="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/mobilenumber"
                            android:textStyle="bold"
                            android:hint="User Name"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColorHint="@color/black"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@android:color/transparent"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            />


                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@color/black"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        app:passwordToggleEnabled="true"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/password"
                            android:textStyle="bold"
                            android:inputType="textPassword"
                            android:hint="Password"
                            android:gravity="center"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@android:color/transparent"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            />





                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@color/black"/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Login For*"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/loginfrom"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@color/black"/>








                </LinearLayout>

            </RelativeLayout>


                <Button
                    android:id="@+id/bt_login"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    style="@android:style/Widget.Button.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_enable_disable"
                    android:text="Login"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/_30sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="16sp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5sp"
                    android:layout_marginTop="10dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/check_pass"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remember Me"
                        android:textSize="15sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/back_bg"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/li_forgot"
                     android:orientation="horizontal"
                    android:layout_marginTop="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="serif"
                        android:layout_gravity="center"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                         android:fontFamily="serif"
                        android:id="@+id/rl_fwd_pass">

                        <TextView
                            android:id="@+id/tv_forgotpass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forgot Password ?"
                            android:textStyle="bold"
                            android:textColor="@color/back_bg"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_1sdp"/>

                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textStyle="bold"
                     android:gravity="center"
                     android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"/>

             <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_weight="1"
                 android:layout_gravity="center_vertical"
                 android:layout_height="@dimen/_1sdp"/>



            </LinearLayout>



            <Button
                android:id="@+id/tv_signup"
                 android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                style="@android:style/Widget.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_enable_disable"
                android:backgroundTint="@color/yellow"
                android:text="Create New Account"
                android:textStyle="bold"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textSize="16sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKIP"
                android:textStyle="bold"
                android:id="@+id/tv_skip"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:gravity="right"
                android:layout_gravity="right"
                 android:textSize="@dimen/_15sdp"
                android:textColor="@color/back_bg"/>


        </LinearLayout>


    </ScrollView>











</RelativeLayout>