<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="center"
             android:id="@+id/img"
            android:src="@drawable/rnd_logo" />

        <TextView
            android:layout_width="match_parent"
            android:text="SchOTest"
            android:id="@+id/name"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:layout_below="@+id/img"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Excepteur sint occaecat cupidatat non proident, sunt culpa qui officia deserunt mollit anim id est eopksio laborum. Sed ut perspiciatis unde omnis istpoe sit voluptatem accusantium doloremque eopsloi "
            android:gravity="center"
            android:layout_below="@+id/name"
            android:layout_margin="@dimen/_6sdp"
            android:textSize="@dimen/_13sdp"
            android:layout_height="wrap_content"/>


        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:indicatorColor="@color/colorAccent"
            app:indicatorName="BallPulseIndicator"
            tools:ignore="MissingConstraints" />


    </LinearLayout>



</RelativeLayout>